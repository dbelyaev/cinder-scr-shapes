	<sourcePattern>src/Box2D/Dynamics/*.cpp</sourcePattern>
	<headerPattern>src/Box2D/Dynamics/*.h</headerPattern>
	<sourcePattern>src/Box2D/Dynamics/Contacts/*.cpp</sourcePattern>
