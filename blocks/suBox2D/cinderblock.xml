<?xml version="1.0" encoding="UTF-8" ?>
<cinder>
<block
	name="sansumbrella Box2D"
	id="com.sansumbrella.box2d"
	author="David Wicks"
	summary="Box2D sandbox and conversions"
	url="git@github.com:sansumbrella/suBox2D.git"
	>
