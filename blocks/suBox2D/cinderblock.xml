	<sourcePattern>src/Box2D/Rope/*.cpp</sourcePattern>
	<headerPattern>src/Box2D/Rope/*.h</headerPattern>
	<header>src/Box2D/Box2d.h</header>
	<includePath system="true">src</includePath>

	<!-- suBox2D wrapper files. -->
	<headerPattern>src/sansumbrella/*.h</headerPattern>
	<sourcePattern>src/sansumbrella/*.cpp</sourcePattern>
	<headerPattern>src/sansumbrella/box2d/*.h</headerPattern>
